# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_PATH=./data/brain.db

# Vault
OBSIDIAN_VAULT_PATH=C:\path\to\oads-vault

# Security
API_KEY_SALT=generate-a-random-32-char-string

# CORS (comma-separated list of allowed origins, ignored in development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Initial admin key (generated on first run)
# ADMIN_API_KEY=oads_live_xxxx

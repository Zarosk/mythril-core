{
  "name": "oads-brain",
  "version": "1.0.0",
  "description": "HTTP API server for cross-platform note/idea capture - OADS Brain",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate-key": "tsx src/scripts/generate-key.ts"
